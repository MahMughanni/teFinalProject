<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5EBF0"
    android:orientation="vertical"
    tools:context=".Activities.UpdatePasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:fontFamily="@font/rawy_regular"
        android:padding="16dp"
        android:text="تغيير كلمة المرور"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#aaa" />

    <EditText
        android:id="@+id/etOldPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#fff"
        android:fontFamily="@font/stc"
        android:gravity="right"
        android:hint="كلمة المرور القديمة"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="#fff"
        android:fontFamily="@font/stc"
        android:gravity="right"
        android:hint="كلمة المرور الجديدة"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/etConfirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:fontFamily="@font/stc"
        android:gravity="right"
        android:hint="تأكيد كلمة المرور الجديدة"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOkNewPassword"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        android:background="@drawable/password_btn_shape"
        android:fontFamily="@font/rawy_regular"
        android:text="موافق"
        android:textColor="#399BD9"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>