<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/noteItem_subTilte"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_book"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Sub Name" />

        <TextView
            android:id="@+id/noteItem_studName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:drawableEnd="@drawable/ic_user"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Stud Name" />

        <TextView
            android:id="@+id/noteItem_noteTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/ic_notes"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Note Title" />

        <TextView
            android:id="@+id/noteItem_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawablePadding="8dp"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_document"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="description" />

    </LinearLayout>


</androidx.cardview.widget.CardView>