<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF0F1">


        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/settingFg_tv_Notif"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/stc"
            android:gravity="center"
            android:textStyle="bold"
            android:text="تفعيل الاشعارات"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/switch1"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/switch1"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_btn_lock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch1" />

        <TextView

            android:id="@+id/settingFg_tv_ChangePassword"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_below="@id/settingFg_tv_Notif"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/stc"
            android:gravity="center"
            android:text="تغير كلمة المرور"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toEndOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/settingFg_tv_Notif" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/switch1"
            android:layout_marginStart="32dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/ic_multimedia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img" />

        <TextView
            android:id="@+id/settingFg_tv_ChangePhnoe_Number"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_below="@id/settingFg_tv_Notif"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/stc"
            android:gravity="center"
            android:text="تغير رقم الهاتف"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.625"
            app:layout_constraintStart_toEndOf="@+id/img2"
            app:layout_constraintTop_toBottomOf="@+id/settingFg_tv_ChangePassword" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>