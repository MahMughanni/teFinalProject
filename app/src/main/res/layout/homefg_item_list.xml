<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="20dp"
        android:background="#E0DDDD"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_img_Vp"
                android:layout_width="130dp"
                android:layout_marginRight="8dp"
                android:layout_height="190dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/login_img0_family"/>


            <TextView
                android:id="@+id/item_Vp_tv_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/item_img_Vp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:maxLines="1"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/ge_ss_unique_light"
                android:gravity="center_vertical"
                android:paddingRight="16dp"
                android:text="العنوان الرئيسي "
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_Vp_description"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/item_img_Vp"
                android:layout_below="@id/item_Vp_tv_title"
                android:layout_marginLeft="8dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="32dp"
                android:layout_marginRight="8dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="تفصيل بسيط عن النشاط "
                android:textColor="#4B4A4A"
                android:textSize="16sp"
                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>